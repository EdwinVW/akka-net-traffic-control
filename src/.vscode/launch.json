{
   // Use IntelliSense to find out which attributes exist for C# debugging
   // Use hover for the description of the existing attributes
   // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
   "version": "0.2.0",
   "configurations": [
        {
            "name": "Start Host",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Host",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/Host/bin/Debug/netcoreapp2.1/Host.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Host",
            // For more information about the 'console' field, see https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md#console-terminal-window
            "console": "externalTerminal",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Start CJCAHost",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build CJCAHost",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/CJCAHost/bin/Debug/netcoreapp2.1/CJCAHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CJCAHost",
            // For more information about the 'console' field, see https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md#console-terminal-window
            "console": "externalTerminal",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ],
    "compounds": [
        {
            "name": "Start Host & CJCAHost",
            "configurations": [
                {
                    "name": "Start CJCAHost",
                    "folder": "src"
                },
                {
                    "name": "Start Host",
                    "folder": "src"
                }                
            ]
        }
    ]
}